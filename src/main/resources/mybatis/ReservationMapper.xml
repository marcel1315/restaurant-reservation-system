<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zerobase.shopreservation.customer.mapper.ReservationMapper">

    <resultMap id="ReservationOutputDtoMap" type="com.zerobase.shopreservation.common.dto.ReservationOutputDto">
        <result column="id" property="id"/>
        <result column="approval_state" property="approvalState"/>
        <result column="check_in_at" property="checkInAt"/>
        <result column="phone" property="phone"/>
        <result column="schedule" property="schedule"/>
    </resultMap>

    <sql id="selectListWhere">
        and shop_id = #{shopId}
        <if test="phone != null">
            and phone like concat('%', #{phone}, '%')
        </if>
        <if test="customerId != null">
            and member_id = #{customerId}
        </if>
        <if test="date != null">
            and date(schedule) = #{date}
        </if>
    </sql>

    <select id="selectListCount" resultType="long">
        select count(*)
        from reservation
        where 1 = 1
        <include refid="selectListWhere"/>
    </select>

    <select id="selectList" resultMap="ReservationOutputDtoMap">
        select id, approval_state, check_in_at, schedule, phone
        from reservation
        where 1 = 1
        <include refid="selectListWhere"/>
        <if test="sortBy.name == 'RECENT'">
            order by schedule desc
        </if>
        limit #{pageStart}, #{pageSize}
    </select>
</mapper>